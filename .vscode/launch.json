    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Server",
            "type": "python",
            "request": "launch",
            "python": "/usr/local/bin/python",
            "program": "${workspaceFolder}/backend/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000",
                "--settings=mlarchive.settings.development"
            ],
            "django": true,
            "presentation": {
                "hidden": false,
                "group": "main",
                "order": 1
            }
        },
        {
            "name": "Run Server with Debug Toolbar",
